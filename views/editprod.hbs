<div class="page">
  <div class="section ">
    <h1 class="title2">
      Edit Product
    </h1>
    <h1 class="title2">
      Product name
    </h1>
    <div class="content">
      <form action="">
        <div class="input-group">
          <div class="input-field">
            <input
              type="text"
              name="title"
              placeholder="Title"
            />
          </div>
          <div class="input-field">
            <input type="number" name="price"placeholder="Price" />
          </div>
          <div class="input-field">
            <select name="category" >
